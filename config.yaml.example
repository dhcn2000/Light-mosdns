# 日志设置
log:
  level: info

# (实验性) API 入口设置   
api:
  http: "127.0.0.1:23380"

# 插件设置
plugins:
  #*基础组件*#

  #常用CN域名
  - tag: cn_site
    type: domain_set
    args:
      files:
        - "/etc/mosdns/geoip/geosite_cn.txt"
  
  #CNIP
  - tag: cn_ip
    type: ip_set
    args:
      files:
        - "/etc/mosdns/geoip/geoip_cn.txt"

  #Hosts 劫持内网域名
  - tag: local_hosts
    type: hosts
    args:
      files:
        - "/etc/mosdns/hosts/hosts.txt"

  #缓存
  - tag: lazy_cache
    type: cache
    args:
      size: 20480
      lazy_cache_ttl: 86400
      dump_file: "/etc/mosdns/cache.dump"
      dump_interval: 600

  #EDNS Client Subnet (ECS) 支持
  - tag: ecs
    type: ecs_handler
    args:
      forward: true        # 是否转发来自下游的 ecs
      send: true           # 是否发送 ecs
  
  - tag: no_ecs
    type: ecs_handler
    args:
      forward: false
      send: false

  #转发至CN DNS服务器 UDP
  - tag: forward_cn_udp
    type: forward
    args:
      concurrent: 2
      upstreams:
        - addr: 119.29.29.29 # DNSPod
        - addr: 180.76.76.76 # Baidu
        - addr: 114.114.114.114 # 114DNS
        - addr: 180.184.1.1 #volcengine
        - addr: 1.2.4.8 #CNNIC

  #转发至CN DNS服务器 DoH
  - tag: forward_cn_doh
    type: forward
    args:
      upstreams:
        - addr: https://223.5.5.5/dns-query # AliDNS
          enable_http3: true
        - addr: https://223.6.6.6/dns-query # AliDNS
          enable_http3: true
        - addr: https://1.12.12.12/dns-query # DNSPod
          enable_http3: true
        - addr: https://120.53.53.53/dns-query # DNSPod
          enable_http3: true
  
  #转发到CN解析 fallback
  - tag: forward_cn
    type: fallback
    args:
      primary: forward_cn_doh
      secondary: forward_cn_udp
      threshold: 1000
      always_standby: true

  #转发至远程服务器
  - tag: forward_remote
    type: forward
    args:
      upstreams:
        - addr: "https://doh.pub/dns-query"
          dial_addr: "1.12.12.12"
        - addr: "https://doh.pub/dns-query"
          dial_addr: "120.53.53.53"

        - addr: tls://8.8.8.8
          enable_pipeline: true
        - addr: tls://8.8.4.4
          enable_pipeline: true
       
        - addr: "tls://dot.pub"
          dial_addr: "1.12.12.12"
          enable_pipeline: true
        - addr: "tls://dot.pub"
          dial_addr: "120.53.53.53"
          enable_pipeline: true

  #*解析流程组件*#
  
  #国内解析
  - tag: query_is_CN_domain
    type: sequence
    args:
      - exec: $no_ecs             #希望缓存
      - exec: $forward_cn
      - exec: query_summary forward_cn

  #国外解析
  - tag: query_not_CN_domain
    type: sequence
    args:
      - exec: $ecs                #不被缓存
      - exec: $forward_remote
      - exec: query_summary forward_remote

  #国外解析为CN IP后回源为CN
  - tag: remote_forward_cn
    type: sequence
    args:
      - exec: $no_ecs             #希望缓存
      - exec: $forward_cn
      - exec: query_summary forward_remote_to_cn

  - tag: respone_is_CN_ips
    type: sequence
    args:
      - matches: resp_ip $cn_ip
        exec: jump remote_forward_cn

  #响应操作
  - tag: has_resp_sequence
    type: sequence
    args:
      - matches: has_resp
        exec: accept

  #主处理流程
  - tag: main
    type: sequence
    args:
      - exec: $lazy_cache
      - exec: $local_hosts
      - exec: jump has_resp_sequence
      - matches: qname $cn_site
        exec: jump query_is_CN_domain
      - exec: jump has_resp_sequence
      - exec: $query_not_CN_domain
      - exec: jump respone_is_CN_ips
      - exec: jump has_resp_sequence

  #服务端口
  - tag: http_server
    type: http_server
    args:
      entries:
        - path: /dns-query  
          exec: main
      src_ip_header: "X-Forwarded-For"
      listen: 127.0.0.1:23353
